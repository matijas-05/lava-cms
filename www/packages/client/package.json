	},
	"dependencies": {
		"@trpc/client": "^10.33.1",
		"superjson": "^1.12.4"
	},
	"devDependencies": {
		"@lavacms/types": "workspace:*",
		"astro": "^2.7.0",
		"eslint-config-package": "workspace:*",
