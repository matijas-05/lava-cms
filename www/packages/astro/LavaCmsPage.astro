---
/* eslint-disable @typescript-eslint/no-unsafe-return */

import type { LavaCmsComponent } from "@lavacms/core";
import { default as LavaCmsAstroComponent } from "./LavaCmsComponent.astro";

interface Props {
	components: LavaCmsComponent[];
}

const { components: cmsComponents } = Astro.props;
if (!cmsComponents) {
	throw new Error("No page data provided to `LavaCmsPage` Astro component");
}
---

{cmsComponents.map((comp) => <LavaCmsAstroComponent component={comp} />)}
