generator client {
    provider        = "prisma-client-js"
    previewFeatures = ["multiSchema"]
}

datasource db {
    provider = "postgresql"
    url      = env("DATABASE_URL")
    schemas  = ["admin", "frontend"]
}

// Admin schema
model User {
    id        String @id @default(cuid())
    name      String
    last_name String
    email     String @unique
    password  String

    @@map("user")
    @@schema("admin")
}

// Frontend schema
model Config {
    id          String @id @default(cuid())
    title       String
    description String
    language    String

    @@map("config")
    @@schema("frontend")
}

model Page {
    id           String   @id @default(cuid())
    name         String
    url          String   @unique
    parent       Page?    @relation("Tree", fields: [parent_id], references: [id], onDelete: Cascade)
    parent_id    String?
    children     Page[]   @relation("Tree")
    is_directory Boolean  @default(false)
    last_update  DateTime @default(now())

    @@map("page")
    @@schema("frontend")
}
