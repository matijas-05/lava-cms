{
	"name": "@lavacms/client",
	"version": "0.1.0",
	"type": "module",
	"description": "Collection of different library clients for Lava CMS API",
	"main": "dist/index.js",
	"types": "dist/index.d.ts",
	"files": [
		"dist"
	],
	"license": "MIT",
	"repository": {
		"type": "git",
		"url": "https://github.com/matijas-05/lava-cms.git",
		"directory": "www/packages/client"
	},
	"keywords": [
		"lava",
		"cms",
		"client",
		"api"
	],
	"scripts": {
