{
	"name": "@lavacms/astro",
	"version": "0.1.0",
	"type": "module",
	"description": "Astro adapter for Lava CMS API",
	"exports": {
		".": "./dist/index.js",
		"./LavaCmsPage.astro": "./LavaCmsPage.astro",
		"./LavaCmsComponent.astro": "./LavaCmsComponent.astro"
	},
	"files": [
		"dist",
		"LavaCmsComponent.astro"
	],
	"license": "MIT",
	"repository": {
		"type": "git",
		"url": "https://github.com/matijas-05/lava-cms.git",
