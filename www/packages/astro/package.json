{
	"name": "@lavacms/astro",
	"version": "0.1.0",
	"type": "module",
	"description": "Astro adapter for Lava CMS API",
	"main": "./dist/index.js",
	"types": "./dist/index.d.ts",
	"exports": {
		".": "./dist/index.js",
		"./LavaCmsComponent.astro": "./LavaCmsComponent.astro",
		"./LavaCmsComponents.astro": "./LavaCmsComponents.astro"
	},
	"files": [
		"dist",
		"*.astro"
	],
	"license": "MIT",
	"repository": {
